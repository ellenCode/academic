#include <stdio.h>
#include <stdlib.h>

int main(){
	
	//Escreva um programa que leia um numero inteiro N e mostre na tela os N primereiros pares.
	
	int numero, i, par;
	

    printf("\nDigite um numero: ");
    scanf("%d", &numero);
    i = 0;
    par = 2; 
  
    printf("Os %d primeiros pares sao:\n", numero);
         while (i < numero) {
            printf ("%d\n", par);
             par = par + 2; 
             i = i + 1;
}
	
return 0 ;	
	
}