#include <stdio.h>
#include <stdlib.h>

int main(){
		
/*35)	(ADS-LAÇO) Exibir quantos números, entre 0 e 1000 são:
a.	Divisíveis por 2
b.	Divisíveis por 4
c.	Divisíveis por 7
*/	
	int i, num;
	
	for (i=0; i<=100; i++){
		
		if (i % 2==0)
		{
		
		printf("numeros por 2: %d\n", i);
		
		}
		
			 if (i % 4==0)
		{
		
			printf("numeros por 4: %d\n", i);
	
		}
	
	
			else if  (i % 7==0)
			
		{
		
			printf("numeros por 7: %d\n", i);
	
		} 
		
		
	}
	
	return 0 ;
	
	system ("pause");
}
